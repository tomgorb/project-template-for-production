FROM ubuntu:20.04

# Never prompts the user for choices on installation/configuration of packages
ENV DEBIAN_FRONTEND noninteractive
ENV TERM linux

RUN apt-get update && apt-get install -y \
    build-essential \
    python3 \
    python3-dev \
    python3-pip \
    python3-venv \
    ruby-dev \
    && rm -rf /var/lib/apt/lists/*

RUN set -xe \
    && gem install fpm
